# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_URL=postgresql://admin:admin123@localhost:5432/teams_slack_pm

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d

# Microsoft Teams / Azure AD
TEAMS_CLIENT_ID=your_azure_ad_client_id
TEAMS_CLIENT_SECRET=your_azure_ad_client_secret
TEAMS_TENANT_ID=your_azure_tenant_id
TEAMS_REDIRECT_URI=http://localhost:3000/api/auth/teams/callback
TEAMS_GRAPH_API_URL=https://graph.microsoft.com/v1.0

# Slack
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_SIGNING_SECRET=your_slack_signing_secret
SLACK_REDIRECT_URI=http://localhost:3000/api/auth/slack/callback
SLACK_BOT_TOKEN=xoxb-your-bot-token

# Azure Speech Services (Audio Transcription)
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=your_azure_region

# OpenAI (NLP Processing)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# AWS S3 (Audio File Storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=teams-slack-pm-recordings

# Or Azure Blob Storage (alternative to S3)
# AZURE_STORAGE_CONNECTION_STRING=your_connection_string
# AZURE_STORAGE_CONTAINER=recordings

# Webhook Secrets
TEAMS_WEBHOOK_SECRET=random_secret_for_teams_webhooks
SLACK_WEBHOOK_SECRET=random_secret_for_slack_webhooks

# Background Jobs
BULL_REDIS_HOST=localhost
BULL_REDIS_PORT=6379

# Logging
LOG_LEVEL=debug
